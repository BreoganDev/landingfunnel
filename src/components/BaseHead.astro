---
import { getEntry } from "astro:content";
import { ViewTransitions } from "astro:transitions";
import { getImage } from "astro:assets";

import "../styles/global.css";

const { data } = await getEntry("config", "about");

interface Props {
  title: string;
  description: string;
  thumbnail?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const { title, description, thumbnail } = Astro.props;

let socialImage;
const pageTitle = `${title} | ${data.sitename}`;

/* SOCIAL IMAGE - Versi√≥n corregida con validaci√≥n */
if (thumbnail) {
  try {
    const allImages = import.meta.glob("/src/assets/*.{jpeg,jpg,png,gif}");
    
    // Debug: Ver qu√© est√° pasando
    console.log("üîç Thumbnail solicitado:", thumbnail);
    console.log("üìÅ Im√°genes disponibles:", Object.keys(allImages));
    
    // Verificar si la imagen existe ANTES de intentar cargarla
    if (allImages[thumbnail]) {
      const imgObj = (await allImages[thumbnail]()).default;
      
      socialImage = await getImage({
        src: imgObj,
        width: 1200,
        height: 630,
        format: "png",
      });
      
      console.log("‚úÖ Imagen social generada correctamente");
    } else {
      console.warn(`‚ö†Ô∏è Imagen no encontrada: ${thumbnail}`);
      console.log("üí° Im√°genes disponibles:", Object.keys(allImages));
      
      // Opcional: Usar imagen por defecto si existe
      const defaultImage = "/src/assets/default-social.jpg";
      if (allImages[defaultImage]) {
        const imgObj = (await allImages[defaultImage]()).default;
        socialImage = await getImage({
          src: imgObj,
          width: 1200,
          height: 630,
          format: "png",
        });
        console.log("üì∑ Usando imagen por defecto");
      }
    }
  } catch (error) {
    console.error("‚ùå Error al procesar imagen social:", error);
    socialImage = null;
  }
}
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<meta name="generator" content={Astro.generator} />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{pageTitle}</title>
<meta name="title" content={pageTitle} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
{socialImage && <meta property="og:image" content={socialImage.src} />}

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
{socialImage && <meta property="twitter:image" content={socialImage.src} />}

<script is:inline>
  const setDarkMode = () => {
    if (localStorage.getItem("color-scheme") === "dark") {
      document.querySelector("html").dataset.theme = "dark";
    }
    if (localStorage.getItem("color-scheme") === "light") {
      document.querySelector("html").dataset.theme = "light";
    }
    if (!localStorage.getItem("color-scheme")) {
      let theme = window.matchMedia("(prefers-color-scheme: dark)").matches
        ? "dark"
        : "light";
      localStorage.setItem("color-scheme", theme);
    }
  };
  setDarkMode();
  document.addEventListener("astro:after-swap", setDarkMode);
</script>
<ViewTransitions fallback="swap" />
<script src="/scroll-timeline.js" is:inline async></script>